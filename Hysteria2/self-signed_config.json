{
  "log": {
    "disabled": false,
    "level": "info",
    "timestamp": true
  },
  "inbounds": [
    {
      "type": "hysteria2",
      "tag": "hy2-in",
      "listen": "::",
      "listen_port": 10860,    //监听端口
      "up_mbps": 500,        //上行速率
      "down_mbps": 500,      //下行速率
      "users": [
        {
          "name": "hy2_001",
          "password": "goofy_ahh_password"        //用户认证密码，可通过 openssl rand -base64 12 随机生成
        },
        {
	  "name": "hy2_002",
          "password": "goofy_ahh_password"        //用户认证密码，可通过 openssl rand -base64 12 随机生成
        }
      ],
      "ignore_client_bandwidth": false,    //若为 true 客户端使用 BBR 拥塞控制算法，若为 false 客户端使用 Hysteria CC，若为 true 则取消 up_mbps 和 down_mbps 配置
      "masquerade": "https://www.bing.com",    //伪装网址
      "tls": {
        "enabled": true,
        "server_name": "www.example.com",    //自有域名，CA证书需要，self-signed证书删除
        "alpn": ["h3"],
        "certificate_path": "/etc/ssl/CA/cert.crt",    //CA证书文件，与self-signed二选一
        "key_path": "/etc/ssl/CA/private.key"    //CA私钥文件，与self-signed二选一
        "certificate_path": "/etc/ssl/self-signed/cert.crt",    //self-signed证书文件，与CA二选一
	"key_path": "/etc/ssl/self-signed/private.key"    //self-signed私钥文件，与CA二选一
      }
    }
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "direct-out"
    }
  ]
}
